<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', book: @book %>
      <h2>New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class= "table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th colspan="3">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><!--画像入れるとこ--></td>
              <td><%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>