<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <tabel>
        <tbody>
          <tr><!--画像入れるとこ--></tr>
          <tr>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </tabel>
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <%= f.label :title, 'Title' %>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :body, 'Opinion' %>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">

    </div>
  </div>
</div>