
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', book: @book %>
      <h2>New book</h2>
      <%= render 'book/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class= "table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><!--画像入れるとこ--></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>