<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :image, 'Image' %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
